package {{package}}.mcp.tools;

import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import reactor.core.publisher.Mono;
import reactor.test.StepVerifier;

/**
 * Unit tests for HealthTool.
 */
class HealthToolTest {

  private HealthTool healthTool;

  @BeforeEach
  void setUp() {
    healthTool = new HealthTool();
  }

  @Test
  void testCheckHealth() {
    Mono<String> result = healthTool.checkHealth();
    
    StepVerifier.create(result)
        .expectNext("MCP Server is healthy and running")
        .verifyComplete();
  }

  @Test
  void testGetServerInfo() {
    Mono<String> result = healthTool.getServerInfo();
    
    StepVerifier.create(result)
        .expectNextMatches(info -> info.contains("{{task-param-name}}"))
        .verifyComplete();
  }
}
